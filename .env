# Root environment file
# Copy to .env and configure for your setup

# Docker Compose
COMPOSE_PROJECT_NAME=exits-saas

# API
API_PORT=3000
API_NODE_ENV=development

# Web
WEB_PORT=4200
WEB_NODE_ENV=development

# Mobile
MOBILE_PORT=8100
MOBILE_NODE_ENV=development

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=exits_saas_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin

# JWT
JWT_SECRET=your-super-secret-key-change-in-production-12345
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:4200

# Logging
LOG_LEVEL=debug

# Redis (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@exits-saas.com
