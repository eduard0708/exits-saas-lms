{
  "name": "exitsaas-mobile",
  "version": "1.0.0",
  "description": "ExITS SaaS Boilerplate - Mobile Application (Ionic)",
  "author": "ExITS Development Team",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "ng serve --proxy-config proxy.conf.json",
    "dev": "ng serve --proxy-config proxy.conf.json",
    "dev:all": "npm run dev",
    "build": "node ./scripts/ng-build-filter.mjs",
    "build:prod": "node ./scripts/ng-build-filter.mjs --configuration production",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "ng:serve": "ng serve --open",
    "capacitor:add:ios": "cap add ios",
    "capacitor:add:android": "cap add android",
    "capacitor:build:ios": "cap build ios",
    "capacitor:build:android": "cap build android",
    "capacitor:sync": "cap sync",
    "capacitor:open:ios": "cap open ios",
    "capacitor:open:android": "cap open android"
  },
  "dependencies": {
    "@angular/animations": "20.3.6",
    "@angular/common": "^20.3.6",
    "@angular/compiler": "20.3.6",
    "@angular/core": "20.3.6",
    "@angular/forms": "20.3.6",
    "@angular/platform-browser": "20.3.6",
    "@angular/platform-browser-dynamic": "20.3.6",
    "@angular/router": "20.3.6",
    "@capacitor-community/sqlite": "^6.0.2",
    "@capacitor/android": "^6.1.2",
    "@capacitor/app": "^6.0.1",
    "@capacitor/camera": "^6.0.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/device": "^6.0.1",
    "@capacitor/geolocation": "^6.0.1",
    "@capacitor/haptics": "^6.0.1",
    "@capacitor/ios": "^6.1.2",
    "@capacitor/keyboard": "^6.0.2",
    "@capacitor/local-notifications": "^6.1.0",
    "@capacitor/network": "^6.0.3",
    "@capacitor/preferences": "^6.0.2",
    "@capacitor/status-bar": "^6.0.2",
    "@ionic/angular": "^8.3.2",
    "ionicons": "^7.4.0",
    "jeep-sqlite": "^2.8.0",
    "jwt-decode": "^4.0.0",
    "rxjs": "^7.8.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.6",
    "@angular/build": "20.3.6",
    "@angular/cli": "20.3.6",
    "@angular/compiler-cli": "20.3.6",
    "@capacitor/cli": "^6.1.2",
    "@eslint/js": "^9.13.0",
    "@ionic/angular-toolkit": "^12.1.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.13.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "puppeteer": "^24.30.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.14.0"
  }
}
